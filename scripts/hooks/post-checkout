#!/usr/bin/env bash
set -euo pipefail

REPO_ROOT="$(git rev-parse --show-toplevel)"
cd "$REPO_ROOT"

if command -v gh >/dev/null 2>&1; then
  if [[ -x scripts/auto_download.sh ]]; then
    scripts/auto_download.sh || echo "[post-checkout] Artifact download skipped."
  fi
else
  echo "[post-checkout] gh CLI not available; skipping artifact download."
fi
